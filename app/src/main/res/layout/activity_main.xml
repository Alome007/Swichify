<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint"
    android:elevation="-1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:transitionName="btn"
        android:id="@+id/card"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#3461DA"
        app:cardElevation="40dp"
        android:layout_height="50dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="AfterNepa"
            android:fontFamily="@raw/product"
            android:textSize="25sp"
            android:transitionName="user"
            android:layout_gravity="center"
            android:id="@+id/userName"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="15sp"
            android:transitionName="tag"
            android:id="@+id/affirmation"
            android:textColor="#000"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="87dp"
            android:id="@+id/search"
            android:layout_marginTop="17dp"
            android:layout_marginRight="35dp"
            android:layout_height="wrap_content" />
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:src="@drawable/ic_more_vert_black_24dp"-->
            <!--android:layout_gravity="right"-->
            <!--android:id="@+id/menu"-->
            <!--android:layout_marginTop="13dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_height="wrap_content" />-->
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:text="Up time"
        android:textSize="@dimen/_15sdp"
        android:textColor="#000"
        android:layout_marginTop="@dimen/_minus60sdp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="3hr 30s"
        android:textColor="#000"
        android:id="@+id/uptime"
        android:layout_gravity="center"
        android:textSize="@dimen/_30sdp"
        android:fontFamily="@raw/product"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:src="@drawable/cirlce" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        app:backgroundTint="#fff"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_40sdp"
        android:src="@drawable/ic_multiline_chart_black_24dp"
        android:layout_height="wrap_content" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>